rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /threads/{threadId} {
      allow read, write: if request.auth != null && request.resource.data.members.contains(request.auth.uid);
      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/threads/$(threadId)).data.members.contains(request.auth.uid);
      }
    }
  }
}
